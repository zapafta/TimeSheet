@model IEnumerable<DataAccess.Models.Colaborador>

@{
    ViewData["Title"] = "Index";
}


<h4>🤩 <strong>Colaboradores</strong></h4>
<p>
    <a style="color:antiquewhite" asp-action="Create">Criar colaborador</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                <a style="color:antiquewhite" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a style="color:antiquewhite" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a style="color:antiquewhite" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
